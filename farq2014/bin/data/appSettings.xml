<MAIN_SETTINGS>
    <SETTINGS>
        <INPUTS>
            <INPUT name="Cam" type="CAM"/>
            <INPUT name="vStars" type="VIDEO">
                <VIDEO path="movies/stars.mov" />
            </INPUT>
            <INPUT name="vFlicker" type="VIDEO">
                <VIDEO path="movies/flicker.mov" />
            </INPUT>
            <INPUT name="Pic" type="IMAGE" path="test"
                   palindrom="true"
            />
            <INPUT name="Mask" type="IMAGE" path="images/mask_building.png"/>
            
        </INPUTS>

        <VISUAL_LAYERS>
            <VISUAL_LAYER name="V_IKEDA" type="IKEDA" inputSource="Cam"/>
        </VISUAL_LAYERS>

        <MIXERS>
            <MIXER name="channel1" type="SIMPLE_BLEND">
                <INPUT_SOURCE name="Pic"/>
                <INPUT_SOURCE name="V_IKEDA"/>
                <INPUT_SOURCE name="vFlicker"/>
                <INPUT_SOURCE name="vStars"/>
            </MIXER>
            <MIXER name="channel2" type="SIMPLE_BLEND">
                <INPUT_SOURCE name="Pic"/>
                <INPUT_SOURCE name="V_IKEDA"/>
                <INPUT_SOURCE name="vFlicker"/>
                <INPUT_SOURCE name="vStars"/>
            </MIXER>
            <MIXER name="mainMix" type="SIMPLE_BLEND" selectorRight="1">
                <INPUT_SOURCE name="channel1"/>
                <INPUT_SOURCE name="channel2"/>
            </MIXER>
            <MIXER name="maskMix" type="SIMPLE_BLEND" selectorRight="1">
                <INPUT_SOURCE name="mainMix"/>
                <INPUT_SOURCE name="Mask"/>
            </MIXER>
        </MIXERS>

    </SETTINGS>

    <NODE_VIEWS>
        <NODE_VIEW name="FinalMix">
            <NODE name="mainMix" x="675" y="20" guiX="675" guiY="240" imageScale="0.4" guiWidth="200" />
            <NODE name="channel1" x="20" y="20" guiX="20" guiY="520" imageScale="1.0" guiWidth="200" />
            <NODE name="channel2" x="940" y="20" guiX="940" guiY="520" imageScale="1.0" guiWidth="200" />
            <NODE name="maskMix" x="675" y="500" guiX="675" guiY="760" imageScale="0.4" guiWidth="200" />
        </NODE_VIEW>
        
        <NODE_VIEW name="INPUT">
            <NODE name="Pic" x="20" y="20" guiX="350" guiY="20" imageScale="0.5" guiWidth="200" />
            <NODE name="V_IKEDA" x="580" y="20" guiX="900" guiY="20" imageScale="0.5" guiWidth="200" />
            <NODE name="vFlicker" x="20" y="400" guiX="350" guiY="400" imageScale="0.5" guiWidth="200" />
            <NODE name="vStars" x="580" y="400" guiX="900" guiY="400" imageScale="0.5" guiWidth="200" />
        </NODE_VIEW>
        
    </NODE_VIEWS>
</MAIN_SETTINGS>